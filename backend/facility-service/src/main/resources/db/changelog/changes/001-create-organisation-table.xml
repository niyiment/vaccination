<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-organisation-table" author="system">
        <createTable tableName="organisation">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints unique="true"/>
            </column>
            <column name="parent_id" type="UUID"/>
            <column name="organisation_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="organisation" indexName="idx_organisation_code">
            <column name="code"/>
        </createIndex>

        <createIndex tableName="organisation" indexName="idx_organisation_type">
            <column name="organisation_type"/>
        </createIndex>

        <createIndex tableName="organisation" indexName="idx_organisation_parent">
            <column name="parent_id"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="organisation"
                baseColumnNames="parent_id"
                constraintName="fk_organisation_parent"
                referencedTableName="organisation"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>
    </changeSet>

</databaseChangeLog>

